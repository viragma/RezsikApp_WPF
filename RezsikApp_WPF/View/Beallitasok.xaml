<Page x:Class="RezsikApp_WPF.View.Beallitasok"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:RezsikApp_WPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Aram">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Icon:PackIconMaterial Kind="Wrench"  Style="{StaticResource menuIcon}" Foreground="Black"/>
            <TextBlock Text="Beállítások" Style="{StaticResource menuText}" />

        </StackPanel>
        <Separator Margin="0 80 0 0"  Height="0.8">
            <Separator.Background>
                <SolidColorBrush Color="#000000" Opacity="0.40"/>
            </Separator.Background>
        </Separator>
        <!-- Tartalom -->
       
    </Grid>
</Page>
